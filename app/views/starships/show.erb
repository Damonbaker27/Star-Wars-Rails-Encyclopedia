
<div class ="container">
  <div class="box">
    <div class="columns is-vcentered">
      <div class= "column is-half">
        <%if @starship.imagepath == "null" %>
        <img src="/assets/imagenot.jpg" height="500" width="300">
        <%else%>
        <%= image_tag(@starship.imagepath, size:"500x500")%>
        <%end%>
      </div>
      <div class="column">
          <div class="content">
            <h3 class="title is-2"> <%=@starship.name%> </h3>
            <h3 class = "title is-6">Model: <%=@starship.model%></h3>
            <h3 class = "title is-6">Manufacturer: <%=@starship.manufacturer%></h3>
            <h3 class = "title is-6">Cost in credits: <%=@starship.cost_in_credits%> credits</h3>
            <h3 class = "title is-6">Length: <%=@starship.length%> meters</h3>
            <%if @starship.max_atmospgering_speed != 0 %>
              <h3 class = "title is-6">Max Atmosphere speed: <%=@starship.max_atmospgering_speed%> km/h</h3>
            <%end%>

            <h3 class = "title is-6">Crew size: <%=@starship.crew%> officers, pilots, and enlisted crew</h3>
            <h3 class = "title is-6">Passengers: <%=@starship.passengers%> troops and support staff</h3>
            <h3 class = "title is-6">Cargo capacity: <%=@starship.cargo_capacity%> tons</h3>
            <h3 class = "title is-6">Consumables on board: <%=@starship.consumables%></h3>
            <h3 class = "title is-6">Hyperdrive rating: Class <%=@starship.hyperdrive_rating%></h3>
            <h3 class = "title is-6">Starship class: <%=@starship.starship_class%></h3>

            <h3 class = "title is-6">Known pilots:<%@starship.characters.each do |s| %>
              <%=link_to s.name, s%>,
            <%end%></h3>

          </div>
        </div>
    </div>
</div>

