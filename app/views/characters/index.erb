<% @characters.each do |character| %>

    <div class="card">
      <div class= "card-image">
      <h2 class = "title is-3"><%=link_to character.name, character%></h2>

      <%if character.imagepath == "null"%>
        <%=link_to character.name, character%>
      <%else%>
        <img src="assets/<%=character.imagepath%>">
      <% end %>

      </div>
    </div>
<% end %>


















