
<section class="section">
  <div class="container is-max-desktop">
  <h1 class="title is-1"> Films List</h1>
    <div class="column is-full">
      <table class="table is-hoverable is-fullwidth is-striped">
        <thead>
          <tr>
            <th>Film Number</th>
            <th>Film Poster</th>
            <th>Film Name</th>
          </tr>
        </thead>
        <tbody>
          <% @films.each do |film| %>
          <tr>
            <td>
              <%=film.id%>
            </td>
              <td>
                <div class="image is-3by4">
                  <figure class="">
                    <%if film.imagepath == "null"%>
                      <a href="/films/<%=film.id%>"><img src="/assets/<%=film.imagepath%>"></a>
                    <%else%>

                       <a href="/films/<%=film.id%>"><img src="/assets/<%=film.imagepath%>"></a>
                    <% end %>
                  </figure>
                </div>
              </td>
            <td>
              <h3><%=link_to film.name, film%></h3>
            </td>
          </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</section>