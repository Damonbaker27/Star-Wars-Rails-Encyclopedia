
<div class ="box">
<div class="columns is-mobile">
  <div class= "column is-half">
    <%if @film.imagepath == "null" %>
      <%= image_tag("default.jpg")%>
      <%else%>
      <%= image_tag(@film.imagepath)%>
      <%end%>
  </div>
  <div class="column">
      <h3 class = "title is-2"><%=@film.name%></h3>
      <h3 class = "title is-4">Director: <%=@film.director%></h3>
      <h3 class = "title is-4">Release date: <%=@film.release_date%></h3>
      <p><%=@film.opening_crawl%></p>
      <br>

      </div>
    </div>
  <div>
</div>
